	server {
        listen       443 ssl;
        server_name  localhost;

        ssl_certificate      /home/aajjbb/Devel/perl/cert.crt;
        ssl_certificate_key  /home/aajjbb/Devel/perl/cert.key;

        ssl_session_cache    shared:SSL:1m;
        ssl_session_timeout  5m;

    #    ssl_ciphers  HIGH:!aNULL:!MD5;
