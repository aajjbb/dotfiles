!Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
!Xft.autohint: false
Xft.hintstyle: hintslight
!Xft.lcdfilter: lcddefault

!xterm configs
xterm*utf8: 1
xterm*termName: xterm-256color
xterm*locale: true
xterm*metaSendsEscape: true
xterm*eightBitInput: false	
!fix clipboard issue

xterm*selectToClipboard: true
xterm*VT100.*translations:      #override \
        Shift Ctrl C: select-end(CLIPBOARD, CUT_BUFFER0) \n\
        Shift Ctrl V: insert-selection(CLIPBOARD, CUT_BUFFER0)
			
xterm*saveLines: 9000

xterm.scrollBar: false
xterm.borderLess: false

xterm*loginShell:         true
xterm*scrollBar:         false
xterm*secondaryScroll:    true

xterm.iso14755: False 

xterm*faceNameDoublesize: xft:vlgothic :style=Regular :pixelsize=12
xterm*font: MesloLGM :pixelsize=13:antialias=true:hinting=true
xterm*boldFont: MesloLGM :bold:pixelsize=12:antialias=true:hinting=true
xterm*faceName: MesloLGM :pixelsize=12:antialias=true:hinting=true
	
!general settings

*.background:               #1b1b1b
*.foreground:               #FFFFFF
	
!special
